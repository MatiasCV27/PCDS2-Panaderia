@model List<PanesModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Listado de Panes
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Panes" class="btn btn-success"><i class="bi bi-person-plus-fill"></i>Agregar Nuevo Pan</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center" style ="vertical-align: middle;">Marca</th>
                    <th class="text-center" style ="vertical-align: middle;">Nombre</th>
                    <th class="text-center" style ="vertical-align: middle;">Descripción</th>
                    <th class="text-center" style ="vertical-align: middle;">Costo</th>
                    <th class="text-center" style ="vertical-align: middle;">Creación</th>
                    <th class="text-center" style ="vertical-align: middle;">Vencimiento</th>
                    <th class="text-center" style ="vertical-align: middle;">Stock</th>
                    <th class="text-center" style ="vertical-align: middle;">Imagen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="vertical-align: middle;">@item.marcaP</td>
                        <td style="vertical-align: middle;">@item.nombreP</td>
                        <td style="vertical-align: middle;">@item.descripcionP</td>
                        <td style="vertical-align: middle;">@item.costoP</td>
                        <td style="vertical-align: middle;">@item.fechaCreacionP.ToString("yyyy-MM-dd")</td>
                        <td style="vertical-align: middle;">@item.fechaVencimiP.ToString("yyyy-MM-dd")</td>
                        <td style="vertical-align: middle;">@item.stockP</td>
                        <td style="vertical-align: middle;"><img src="@item.imagenP" alt="Imagen de Pan" style="width: 50px; border: 2px solid black"/></td>
                        <td style="vertical-align: middle;" class="text-center">
                            <a asp-action="Editar" asp-controller="Panes" class="btn btn-primary" asp-route-idPanes="@item.idPanes"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td style="vertical-align: middle;" class="text-center">
                            <a asp-action="Eliminar" asp-controller="Panes" class="btn btn-danger" asp-route-idPanes="@item.idPanes"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

