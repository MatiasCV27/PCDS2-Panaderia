@model PanesModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Agregar Pan
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Panes" method="post">
            <div class="mb-3">
                <label class="form-label">Marca</label>
                <input asp-for="idMarca" type="number" class="form-control">
                <span asp-validation-for="idMarca" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nombre del Pan</label>
                <input asp-for="nombreP" type="text" class="form-control">
                <span asp-validation-for="nombreP" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion del Pan</label>
                <input asp-for="descripcionP" type="text" class="form-control">
                <span asp-validation-for="descripcionP" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Costo del Pan</label>
                <input asp-for="costoP" type="number" class="form-control">
                <span asp-validation-for="costoP" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Creacion</label>
                <input asp-for="fechaCreacionP" type="date" class="form-control">
                <span asp-validation-for="fechaCreacionP" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Vencimineto</label>
                <input asp-for="fechaVencimiP" type="date" class="form-control">
                <span asp-validation-for="fechaVencimiP" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-cloud-download-fill"></i> Guardar</button>
            <a asp-action="Listar" asp-controller="Panes" class="btn btn-warning"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
        </form>
    </div>
</div>


