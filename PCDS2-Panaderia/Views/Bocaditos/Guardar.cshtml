@model BocaditosModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Agregar Bocadito
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Bocaditos" method="post">
            <div class="mb-3">
                <label class="form-label">Marca</label>
                <input asp-for="idMarca" type="number" class="form-control">
                <span asp-validation-for="idMarca" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nombre del Bocadito</label>
                <input asp-for="nombreB" type="text" class="form-control">
                <span asp-validation-for="nombreB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion del Bocadito</label>
                <input asp-for="descripcionB" type="text" class="form-control">
                <span asp-validation-for="descripcionB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Costo del Bocadito</label>
                <input asp-for="costoB" type="number" class="form-control">
                <span asp-validation-for="costoB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Creacion</label>
                <input asp-for="fechaCreacionB" type="date" class="form-control">
                <span asp-validation-for="fechaCreacionB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Vencimineto</label>
                <input asp-for="fechaVencimiB" type="date" class="form-control">
                <span asp-validation-for="fechaVencimiB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Stock Disponible</label>
                <input asp-for="stockB" type="number" class="form-control">
                <span asp-validation-for="stockB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Imagen</label>
                <input asp-for="imagenB" type="text" class="form-control">
                <span asp-validation-for="imagenB" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-cloud-download-fill"></i> Guardar</button>
            <a asp-action="Listar" asp-controller="Bocaditos" class="btn btn-warning"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
        </form>
    </div>
</div>

