@using Microsoft.AspNetCore.Identity;
@model UsuariosModel
@{
    ViewData["Title"] = "Acceso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="col-lg-4 mx-auto">
        <form asp-controller="Acceso" asp-action="ValidarUser" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Usuario</label>
                <input type="text" class="form-control" asp-for="usuario">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                <input type="password" class="form-control" asp-for="clave">
            </div>
            <div>
                <p><a asp-controller="Usuarios" asp-action="GuardarPropioUser">¿No tienes cuenta?, click aqui</a></p>
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
    </div>
</div>
